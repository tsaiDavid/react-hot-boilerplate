{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "comma-dangle"            : [1, "never"],
    "func-names"              : 0,
    "key-spacing"             : 0,
    "no-else-return"          : 0,
    "no-multi-spaces"         : 0,
    "one-var"                 : 0,
    "new-cap"                 : 0,
    "react/jsx-boolean-value" : 0,
    "space-in-parens"         : 0,
    "quotes"                  : [2, "single"],
    "semi"                    : [2, "never"],
    "jsx-quotes"              : [2, "prefer-single"],
    "indent"                  : [2, 2, {"SwitchCase": 1}]
  },
  "plugins": [
    "react"
  ]
}
